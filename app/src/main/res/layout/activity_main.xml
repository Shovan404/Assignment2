<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        tools:context=".GridActivity">

        <Button
            android:id="@+id/btnFragment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area of circle"
            android:textSize="15sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"


            />
        <Button
            android:id="@+id/btnFragment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Palindrome"
            android:textSize="15sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"


            />
        <Button
            android:id="@+id/btnFragment3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Automorphic"
            android:textSize="15sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"


            />
        <Button
            android:id="@+id/btnFragment4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Armstrong"
            android:textSize="15sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"


            />
        <Button
            android:id="@+id/btnFragment5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simple Interest"
            android:textSize="14sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"


            />
        <Button
            android:id="@+id/btnFragment6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swap"
            android:textSize="15sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"


            />


    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/fragmentContainer"/>

</LinearLayout>